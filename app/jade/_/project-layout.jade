extends layout

//- block append vars
//-   - TITLE = CONFIG.projects[PROJ_INDEX].title
//-   - PROJ = CONFIG.projects[PROJ_INDEX].name
//-   - TYPE = CONFIG.projects[PROJ_INDEX].type

mixin project(num, type)
  +img('projects/'+PROJ+'/'+PROJ+'-'+num, type)&attributes(attributes)

block content
  .project-page(class=PROJ)
    //- old hero
    //- .hero(style={'background-image': 'url(/images/projects/#{PROJ}/#{PROJ}-1.jpg)'})
      //- h1.title= TITLE
      //- .project-type= TYPE
    +project(1)(class='hero-image')
    .project-content
      block project-content
    .project-nav
      a.social-button.share.addthis_button_compact(href='#' target='_blank')
        //- We need the span tag so addthis doesn't add it's own share image
        //- http://support.addthis.com/customer/portal/articles/381236-custom-buttons
        span
      .previous-and-next
        - var isPrev = PREV ? '' : 'disabled'
        - var isNext = NEXT ? '' : 'disabled'
        a.project-previous(href='/project/#{PREV}' class=isPrev)
        a.project-next(href='/project/#{NEXT}' class=isNext)
