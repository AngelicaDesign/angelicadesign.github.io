include _nav

mixin page(name, title)
  doctype html
  html(lang='en')
    head

      if title
        title= title + ' - Angelica Design'
      else
        title Angelica Design

      include _meta

      //--Page styles
      link(rel='stylesheet', href='/styles/main.css')

    body
      .header
         .menu-button
         img.logo(src='/images/2x_Main_Logo.png')
         ul
           li ui/ux
           li print
           li branding
           li illustration
      +nav(name)

      block

      a.top-button: img(src='/images/2x_Top_Button.png')
      .footer
        .footer-top-section
          .lets-connect-container
            .if-work-well Think we'd work well together?
            img.lets-connect(src='/images/2x_Lets_Connect.png')
          .contact-info
            p
              img.phone(src='/images/2x_Phone.png')
              | (916) 549-0849
            p
              img.email(src='/images/2x_Email.png')
              | angelicadesign1@gmail.com
        .footer-bottom-section
          .legal Website designed by Angelica Design Â©2015. All Rights Reserved.
          .social-icons
            a.social-button(href='http://www.linkedin.com/pub/angelica-gutierrez/34/631/73b'): img(src='/images/2x_Footer_Linkedin.png')
            a.social-button(href='https://www.behance.net/angelicadesign1'): img(src='/images/2x_Footer_Behance.png')
            a.social-button(href='https://dribbble.com/AngelicaDesign'): img(src='/images/2x_Footer_Dribbble.png')
            a.social-button(href='http://instagram.com/angelica_design/'): img(src='/images/2x_Footer_Instagram.png')
            a.social-button(href='http://www.pinterest.com/AngelicaDesign1/'): img(src='/images/2x_Footer_Pinterest.png')
            a.social-button(href='http://www.facebook.com/angelicadesign1'): img(src='/images/2x_Footer_Facebook.png')
            a.social-button(href=''): img(src='/images/2x_Footer_Share.png')

      // build:js /scripts/main.min.js
      script(src='/scripts/main.js')
      script(src='/scripts/main-helper.js')
