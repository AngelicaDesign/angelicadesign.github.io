- var HOME_PAGE = 'home'

mixin link(name)
  a(href='/'+name, class=(CURRENT_PAGE==name || (CURRENT_PAGE==HOME_PAGE && name=='')) ? 'active':'')
    block

mixin nav(name)
  - var CURRENT_PAGE = name
  .nav
    img.small-logo(src='/images/2x_Small_Logo.png')
    ul
      li: +link('') portfolio
      li: +link('about') about
      li: +link('contact') contact
      li: +link('blog') blog
