.contact-page.hide
  .content
    .if-work-well Ready to make things happen?
    img.lets-connect(src='/images/2x_Lets_Connect.png')
    .contact-info
      .phone
        img.phone-icon(src='/images/2x_Phone.png')
        = CONFIG.phone
      a.email(href='mailto:'+CONFIG.email)
        img.email-icon(src='/images/2x_Email.png')
        = CONFIG.email
    .social-buttons
      each url, name in CONFIG.social
        a.social-button(class=name, href=url)
    .copyright= CONFIG.copyright
